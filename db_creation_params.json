
{
	/*******************************
		Some global stuff
	********************************/
	"global":{
		"structure_database": "db",							// Folder containing the downloaded structs.
		"log_name": "db_creation.log"
	},
	
	
	/*******************************
		How to do the initial 
		blast search. 
	********************************/
	"blastp": {
	    "exec": "blastp", 						// The blast executable (whole path if needed)
	    "extra_args": "-remote", 				// With '-remote' it will query ncbi dbs
	    "blastp_output_file": "sequences.xml", 	// Name of the blast output file
	    "search_db_name": "pdbaa", 				// Name (or place) of the database to query
	    "max_target_sequences": 10, 			// Maximum number of alignments to get
	    "alignments_file": "alignments.json"	// Name of the filtered output json file
	    										// 		containing the details about the alignments.
	},
	
	/*******************************
		How to prepare the pdbs.
	********************************/
	"pdb_preparation": {
		"load_selection": "all",
		"forbidden_residues": ["478","017"]
	
	},	
	
	/*******************************
		Parameters to create the
		new blast database (the
		one used by the server) 
	********************************/
	"blast_database_creation":{
		"new_database_folder": "blast_db",
       	"new_database_name":"new_blast_db",						// Name of the new DB
       	"database_title":"'Filtered HIV-like sequences DB'", 	// Title of the DB
       	"segmasker_exe": "segmasker",
       	"makeblastdb_exe": "makeblastdb",
       	"blastdbcmnd_exe": "blastdbcmd"
	}
	
}